# Startup script for the Monasca API

description "Monasca API Python app"
start on runlevel [2345]

console log
respawn

setgid {{ monasca_group }}
setuid {{ monasca_api_user }}
exec {{ monasca_python_dir }}/bin/gunicorn \
    -k eventlet \
    --worker-connections={{ api_gunicorn_worker_connections }} \
    --backlog={{ api_gunicorn_backlog }} \
    --paste {{ monasca_conf_dir }}/api-config.ini \
    --name monasca-api
